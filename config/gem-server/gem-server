#!/bin/bash

# Get the absolute path to the directory where this script actually resides.
SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"

# Set the PYTHONPATH environment variable to point to your project's source directory.
export PYTHONPATH="$SCRIPT_DIR/src"

# Execute the Python application, passing along all arguments ($@) given to this script.
"$SCRIPT_DIR/.venv/bin/python" -m gem.cli "$@"
